<html xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:decorator="http://www.opensymphony.com/sitemesh/decorator" xmlns:s="/struts-tags">

<jsp:output doctype-root-element="html"
	doctype-public="-//W3C//DTD XHTML 1.1 Transitional//EN"
	doctype-system="http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd" />

<jsp:directive.page contentType="text/html" />

<head>
  <s:set var="title" value="getText('main.title')" /> 	
  <title><decorator:title default="${title}" /></title>

  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=8" />
  
  <s:set var="favicon" value="getText('favicon.url')" />
  <link rel="shortcut icon" href="${favicon}" type="image/x-icon"/>

  <s:url var="url" value="/css/reset.css">
	<s:param name="v"><s:property value="frontEndVersion" /></s:param>
  </s:url>
  <link rel="stylesheet" type="text/css" href="${url}"/>

  <s:url var="url" value="/css/screen.css">
	<s:param name="v"><s:property value="frontEndVersion" /></s:param>
  </s:url>
  <link rel="stylesheet" type="text/css" href="${url}"/>

  <s:url var="url" value="/css/branding.css">
	<s:param name="v"><s:property value="frontEndVersion" /></s:param>
  </s:url>
  <link rel="stylesheet" type="text/css" href="${url}"/>

<jsp:text>
&lt;!--[if IE 6]&gt;
</jsp:text>
  <s:url var="url" value="/css/ie6.css">
	<s:param name="v"><s:property value="frontEndVersion" /></s:param>
  </s:url>
  <link rel="stylesheet" href="${url}" type="text/css" media="screen,print"/>
<jsp:text>
&lt;![endif]--&gt;
</jsp:text>

  <s:url var="url" value="/js/lib/jquery.js">
	<s:param name="v"><s:property value="frontEndVersion" /></s:param>
  </s:url>
  <script type="text/javascript" src="${url}"><!-- //prevent jspx minimization --></script>
    
  <s:url var="url" value="/js/oba/Config.js">
	<s:param name="v"><s:property value="frontEndVersion" /></s:param>
  </s:url>
  <script type="text/javascript" src="${url}"><!-- //prevent jspx minimization --></script>
  
  <decorator:head />
</head>

<body>
<div id="mainbox">
	<div id="topbar">
	
     <div class="logo">
        <a href="http://www.wmata.com"><img src="images/logo.png" alt="Metro logo"></img></a>
        <div class="site-name">WMATA</div>
    </div>
	
	 <!-- WMATA Name -->
	<div class="wmata-name">
		Washington Metropolitan Area Transit Authority
	
	</div>
	
  </div> <!--utility-nav-->
  
</div> <!--utility-nav-wrapper-->
  
  <div class="main-nav-wrapper">
	<div class="container">
   
	<!--BEGIN DESKTOP MEGA MENU-->    
    <nav>
      <ul>
      <!--NOTE TO DEVELOPER: Add the "active-panel" class to the relevant top-level <li> to make this section visible when the mobile menu is opened. For example, if the user is on a page in the Schedules section, it should look like <li class="active-panel"><a href="#">Schedules</a> -->
        <li><a href="http://www.wmata.com/service/index.cfm">Service</a></li>
        <li><a href="http://www.wmata.com/schedules/index.cfm">Schedules</a></li>
        <li><a href="http://www.wmata.com/rider-guides/index.cfm">Rider Guides</a></li>
        <li><a href="http://www.wmata.com/fares/index.cfm">Fares</a></li>
        <li><a href="http://www.wmata.com/initiatives/index.cfm">Initiatives</a></li>
        <li><a href="http://www.wmata.com/about/index.cfm">About</a></li>
      </ul>    </nav>
		
	</div> <!-- close topbar -->
	
	<div id="contentbox">
	<!-- Enter Content here -->
	
  		<div id="bustime">
			<decorator:body />
	    </div>
	    
	<!-- End Content -->
	</div>

	<div class="container clear"></div>
</div> <!-- close mainbox -->

</body>
</html>
