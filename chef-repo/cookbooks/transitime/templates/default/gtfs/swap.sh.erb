#/bin/bash

if [ ! -e "/var/lib/oba/swapfile2" ]
then
  echo "creating swapfile"
  sudo fallocate -l 8G /var/lib/oba/swapfile2
  sudo chmod 600 /var/lib/oba/swapfile2
  sudo mkswap /var/lib/oba/swapfile2
  sudo swapon /var/lib/oba/swapfile2
  echo "swap created"
else
  echo "swapfile exists, exiting"
fi


