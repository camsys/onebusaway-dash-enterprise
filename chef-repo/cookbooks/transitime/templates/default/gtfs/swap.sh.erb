#/bin/bash

SWAPFILE=${1:/var/lib/oba/swapfile2}
SWAPSIZE=${2:8}

if [ ! -e "${SWAPFILE}" ]
then
  echo "creating swapfile ${SWAPFILE}"
  sudo fallocate -l ${SWAPSIZE}G ${SWAPFILE}
  sudo chmod 600 ${SWAPFILE}
  sudo mkswap ${SWAPFILE}
  sudo swapon ${SWAPFILE}
  echo "swap created at file ${SWAPFILE}"
else
  echo "swapfile ${SWAPFILE} exists, exiting"
fi


