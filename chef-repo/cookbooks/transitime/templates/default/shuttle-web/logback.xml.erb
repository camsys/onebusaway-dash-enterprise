<configuration scan="true" scanPeriod="30 seconds" debug="true">

	<!-- 0 or more renderer elements -->

	<!-- 0 or more appender elements -->

	<property name="LOG_FILE_ROOT"
		value="${transitclock.logging.dir:-/Logs}/" />

	<appender name="ROLL" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOG_FILE_ROOT}/trasitclock-webapp.%d.log.gz</fileNamePattern>
			<maxHistory>5</maxHistory>
		</rollingPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%d{ISO8601} %-5p [%F:%L] : %m%n</pattern>
		</layout>

	</appender>

	<root level="info">
		<appender-ref ref="ROLL" />
	</root>

</configuration>