<?xml version='1.0' encoding='utf-8'?>
<Context>
    <WatchedResource>WEB-INF/web.xml</WatchedResource>
    <Environment name="xwikiUrl" value="http://xwiki.prod.wmata.obaweb.org/xwiki" type="java.lang.String" override="true" />
    <Environment name="wikiDocumentEditUrl" value="http://xwiki.prod.wmata.obaweb.org/xwiki/bin/edit/%{namespace}/%{documentName}" type="java.lang.String" override="true" />
    <Environment name="wikiAttachmentUrl" value="http://xwiki.prod.wmata.obaweb.org/xwiki/bin/download/%{namespace}/%{documentName}/%{attachmentName}" type="java.lang.String" override="true" />
     <Resource name="jdbc/appDB"
        auth="Container"
        type="javax.sql.DataSource"
        initialSize="10"
        maxActive="100"
        maxIdle="50"
        minIdle="10"
        maxWait="60"
	suspectTimeout="60"
        validationQuery="select 1"
        testWhileIdle="true"
        timeBetweenEvictionRunsMillis="30000"
        minEvictableIdleTimeMillis="60000"
        username="<%= node[:oba][:db_user] %>"
        password="<%= node[:oba][:db_password] %>"
        driverClassName="com.mysql.jdbc.Driver"
        url="jdbc:mysql://db.<%= node[:oba][:env] %>.<%= node[:oba][:base_domain] %>:3306/<%= node[:oba][:db_instance_name] %>?rewriteBatchedStatements=true&amp;cachePrepStmts=true" >
     </Resource>
     <Resource name="jdbc/agencyMetadataDB"
        auth="Container"
        type="javax.sql.DataSource"
        maxActive="2"
        maxIdle="1"
        maxWait="60"
        validationQuery="select 1"
        testWhileIdle="true"
        timeBetweenEvictionRunsMillis="10000"
        minEvictableIdleTimeMillis="60000"
        username="<%= node[:oba][:db_user] %>"
        password="<%= node[:oba][:db_password] %>"
        driverClassName="com.mysql.jdbc.Driver"
        url="jdbc:mysql://db.<%= node[:oba][:env] %>.<%= node[:oba][:base_domain] %>:3306/<%= node[:oba][:db_instance_name] %>?rewriteBatchedStatements=true&amp;cachePrepStmts=true" >
     </Resource>

</Context>